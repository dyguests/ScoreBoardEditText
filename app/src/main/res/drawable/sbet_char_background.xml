<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#46546c"
                android:startColor="#7b94b0"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item
        android:height="4dp"
        android:gravity="center_vertical">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#89a9c6"
                android:startColor="#4c627c"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="4dp"
                android:color="#333c4961"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
